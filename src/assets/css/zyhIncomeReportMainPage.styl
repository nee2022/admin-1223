// 默认样式
.zyhIncomeReportMainPage {
  margin: 0;
  padding: 0;
  box-sizing: border-box;

  *, *::before, *::after {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  li {
    list-style-position: inside;
    list-style-type: none;
  }

  .clearfix::after {
    content: '';
    display: block;
    clear: both;
  }

  height: 100vh;
  display: flex;
  flex-flow: column;

  header {
    position: relative;

    .infoArea {
      height: 102px;
      display: flex;
      flex-direction: row;
      position: relative;

      .pageName {
        flex-grow: 1;
        font-family: PingFangSC-Regular;
        font-size: 24px;
        font-weight: normal;
        font-stretch: normal;
        letter-spacing: 1px;
        color: #000000;
        line-height: 102px;
        text-indent: 38px;
      }

      .profile {
        margin-top: 40px;
        margin-right: 37px;
      }
    }

    .functionArea {
    }
  }

  section {
    flex-grow: 1;

    .section1 {
      position: relative;
      left: 0;
      top: -20px;
      border: 1px solid red;
      z-index: 1;
      display: flex;
      align-items: center;
      margin-left: 38px;

      .toggleTable {
        border: 1px solid red;
        display: flex;
        align-items: center;

        .listButton {
          width: 44px;
          text-align: center;
          margin-right: 50px;
        }

        .chartButton {
          width: 44px;
          text-align: center;
          margin-right: 50px;
        }
      }

      .dateSelectBar {
        border: 1px solid black;
        height: 50%;
        position: relative;

        .section3Top {
          position: absolute;
          left: 0;
          top: 0;
          width: 100%;
          display: flex;

          .left {
            margin-left: 42px;
            display: flex;

            span:nth-child(1) {
              width: 5px;
              height: 20px;
              border-radius: 5px;
              background: #2858f2;
              margin-right: 5px;
            }

            span:nth-child(2) {
              font-size: 14px;
              font-family: PingFang SC;
              font-weight: normal;
              color: #000000;
            }
          }

          .medial {
            flex-grow: 1;
            display: flex;
            justify-content: flex-end;

            .medialWrapper {
              display: flex;
              border-radius: 5px;

              span {
                padding: 7px 20px;
                font-size: 16px;
                font-family: PingFang SC;
                font-weight: normal;
                color: #2754FB;
              }

              span.currentActive {
                background: #2858f2;
                color: #fff;
                border-radius: 5px;
              }
            }
          }

          .right {
            margin: 0 50px 0 10px;

            .block {
              color: #2754FB;
              border-radius: 5px;
            }
          }
        }

        #incomeStatisticsEchart3 {
          height: 100%;
          width: 100%;
        }

        .section3Bottom {
          position: absolute;
          left: 0;
          top: 0;
        }
      }

      .inputFrame {
        width: 442px;
        height: 36px;
        border-radius: 10px;
        border: solid 1px #1e69fe;
        display: flex;
        flex-direction: row;
        align-items: center;
        justify-content: space-around;

        img {
          margin-left: 20px;
          margin-right: 0px;
        }

        .inputBlank {
          width: 390px;
          height: 30px;

          .el-input__inner {
            height: 30px;
            text-indent: 10px;
            border: none;
          }
        }
      }

      .searchButton {
        .el-button {
          display: flex;
          align-items: center;
          border-radius: 10px;
          padding: 0 15px;
          height: 36px;
          margin-left: 8px;
          font-size: 16px;
          background: #1e69fe;
          color: #fff;

          span {
            margin-left: 5px;
          }
        }
      }
    }

    .section2 {
      .el-table {
        .el-table__header {
          tr {
            height: 60px;

            .cell {
              text-align: center;
              font-size: 16px;
              font-weight: 400;
              color: black;
            }
          }
        }

        .el-table__body {
          tr {
            height: calc(((100vh - 288px) / 12));

            .cell {
              text-align: center;
              font-size: 16px;
              font-weight: 400;
              color: #908e8e;

              .operation {
                height: 100%;
                width: 100%;
                display: flex;
                align-items: center;
                justify-content: center;

                div {
                  img {
                    margin: 0 10px;
                  }
                }
              }
            }
          }
        }
      }
    }
  }

  footer {
    border: 1px solid red;
    height: 100%;
    max-height: 90px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin: 0 30px;

    .total {
      font-family: PingFangSC-Regular;
      font-size: 16px;
      font-weight: 600;
      color: #333333;
      /* border: 1px solid red; */
    }
  }
}

// 弹出框样式
.zyhSingleLineListMainPage {
  .el-dialog {
    margin: 0 auto;
    padding: 50px;

    .el-dialog__header {
    }

    .el-dialog__body {
      padding: 10px;

      .el-form {
        &-item {
          margin: 10px;

          &__label {
            text-align: center;
          }

          &__content {
            input {
              text-indent: 10px;
            }
          }
        }
      }
    }

    .el-dialog__footer {
      button {
        padding: 5px;
      }
    }
  }
}
