// 默认样式
.zyhDataBoardMainPage {
  margin: 0;
  padding: 0;
  box-sizing: border-box;

  *, *::before, *::after {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  li {
    list-style-position: inside;
    list-style-type: none;
  }

  .clearfix::after {
    content: '';
    display: block;
    clear: both;
  }

  height: 100vh;
  display: flex;
  flex-flow: column;

  header {
    display: flex;
    flex-direction: column;

    .infoArea {
      height: 102px;
      display: flex;
      flex-direction: row;
      position: relative;

      .pageName {
        flex-grow: 1;
        font-family: PingFangSC-Regular;
        font-size: 24px;
        font-weight: normal;
        font-stretch: normal;
        letter-spacing: 1px;
        color: #000000;
        line-height: 102px;
        text-indent: 38px;
      }

      .profile {
        margin-top: 40px;
        margin-right: 37px;
      }
    }

    .toggleBar {
      height: 18px;
      font-size: 15px;
      font-family: PingFang SC;
      font-weight: normal;
      color: #6E6E70;
      display: flex;
      align-items: center;
      justify-content: flex-start;

      span {
        margin-left: 45px;
      }
    }
  }

  section {
    flex-grow: 1;

    .section1 {
      height: 30%;

      ul {
        height: 100%;
        display: flex;
        align-items: center;

        li {
          width: 25%;
          height: 100%;
          display: flex;
          flex-direction: column;

          .top {
            height: 30%;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: flex-end;
            font-size: 12px;
            font-family: PingFang SC;
            font-weight: 400;
            color: #100F0F;
          }

          .bottom {
            height: 70%;
            display: flex;
            justify-content: space-around;

            div.p1 {
              width: 50%;
              display: flex;
              flex-direction: column;

              span:nth-child(1) {
                text-align: center;
                height: 50%;
                font-size: 30px;
                font-family: PingFang SC;
                font-weight: bold;
                color: #2754FB;
              }

              span:nth-child(2) {
                margin: 0 auto;
                width: 50px;
                text-align: center;
                border-radius: 9px;
                font-size: 12px;
                font-family: PingFang SC;
                font-weight: 400;
                background: #2c6af5;
                color: #FBF6F6;
                line-height: 1;
                padding: 2px;
              }
            }

            div.p2 {
              width: 50%;
              display: flex;
              flex-direction: column;
              position: relative;

              div:not(.noBorder) {
                span:nth-child(3) {
                  position: absolute;
                  height: 40px;
                  right: 0;
                  border-right: 1px solid #848FB7;
                }
              }

              div {
                height: 50%;
                text-align: center;

                span:nth-child(1) {
                  font-size: 30px;
                  font-family: PingFang SC;
                  font-weight: bold;
                  color: #FB6D27;
                }

                span:nth-child(2) {
                  font-size: 12px;
                  font-family: PingFang SC;
                  font-weight: bold;
                  color: #FB6D27;
                  margin-left: -3px;
                }
              }

              span.amount {
                margin: 0 auto;
                width: 50px;
                text-align: center;
                border-radius: 9px;
                font-size: 12px;
                font-family: PingFang SC;
                font-weight: 400;
                background: #2c6af5;
                color: #FBF6F6;
                line-height: 1;
                padding: 2px;
              }
            }
          }
        }
      }
    }

    .section2 {
      height: 70%;
      // border: 1px solid black;
    }
  }
}